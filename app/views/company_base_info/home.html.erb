<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>Xiaoshoutai Microblog</h1>

  <h2>
      This is the home page for the
	  <a href="http://xiaoshoutai.com/">Xiaoshoutai weibo component</a> 
	  by <a href="http://caiqinghua.com">CaiQinghua</a>.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Xiaoshoutai"), 'http://caiqinghua.com/' %>
<% end %>